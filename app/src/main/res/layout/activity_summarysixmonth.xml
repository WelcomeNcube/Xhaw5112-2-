<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picture1"
    tools:context=".summarysixmonth">

    <Button
        android:id="@+id/backButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="353dp"
        android:layout_height="106dp"
        android:text="Click one of the courses to find out more about them:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="197dp"
        android:layout_height="143dp"
        android:contentDescription="Logo"
        android:src="@drawable/picture2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_marginTop="16dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Six-Month Courses"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <!-- First Aid Button -->

    <!-- Life Skills Button -->

    <!-- Sewing Button -->

    <!-- Landscaping Button -->

    <Button
        android:id="@+id/lifeSkillsButton"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        android:text="Life Skills - R1500"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstAidButton"
        app:layout_marginEnd="32dp"
        app:layout_marginStart="32dp"
        app:layout_marginTop="16dp" />

    <Button
        android:id="@+id/landscapingButton"
        android:layout_width="346dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:text="Landscaping - R1500"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sewingButton"
        app:layout_marginEnd="32dp"
        app:layout_marginStart="32dp"
        app:layout_marginTop="16dp" />

    <Button
        android:id="@+id/firstAidButton"
        android:layout_width="342dp"
        android:layout_height="63dp"
        android:layout_marginTop="192dp"
        android:text="First Aid - R1500"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_marginEnd="32dp"
        app:layout_marginStart="32dp"
        app:layout_marginTop="100dp" />

    <Button
        android:id="@+id/sewingButton"
        android:layout_width="339dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:text="Sewing - R1500"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lifeSkillsButton"
        app:layout_marginEnd="32dp"
        app:layout_marginStart="32dp"
        app:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
